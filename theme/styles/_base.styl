body
  font-size: 1rem

  display: flex
  align-items: center
  flex-direction: column

  font-family: 'Source Code Pro', monospace
  font-size: 18px
  line-height: 1.67
  color: white

h1, h2, h3
  text-align: center

h3
  font-size: 1.75rem

a
  font-weight: bold

a:hover
  text-decoration: none
  text-transform: uppercase

.container
  width: 100%
  background-image: url("/images/background.jpg"), 
    linear-gradient(72deg, var(--darkish-purple-alpha), #0b66b2 85%, var(--ocean-blue-alpha))
  // background-size: contain
  background-repeat: no-repeat,
      no-repeat,
      no-repeat
  background-position: top,
      top,
      top

@media screen and (max-width: 2000px)
  .container
    background-image: url("/images/background-2000.jpg"), 
      linear-gradient(72deg, var(--darkish-purple-alpha), #0b66b2 85%, var(--ocean-blue-alpha))
    // background-size: contain
  h1, h2 .main-header__supertitle
      font-size: 5rem
      line-height: 1.5em
  h2 
    font-size: 3.5rem
    line-height: 1.25em
 
@media screen and (max-width: 1000px)
  .container
    background-image: url("/images/background-1000.jpg"),
    linear-gradient(72deg, var(--darkish-purple-alpha), #0b66b2 85%, var(--ocean-blue-alpha))
    // background-size: contain
  h1, h2 .main-header__supertitle
      font-size: 4rem
      line-height: 1.5em
  h2 
    font-size: 2.5rem
    line-height: 1.5em

@media screen and (max-width: 600px)
  .container
    background-image: url("/images/background-600.jpg"),
      linear-gradient(72deg, var(--darkish-purple-alpha), #0b66b2 85%, var(--ocean-blue-alpha))
    // background-size: contain
  h1, h2 .main-header__supertitle
      font-size: 3rem
      line-height: 1.25em
  h2 
    font-size: 2rem
    line-height: 1.5em
 