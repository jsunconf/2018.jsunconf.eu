body
  font-size: 1rem

  display: flex
  align-items: center
  flex-direction: column

  font-family: 'Source Code Pro', monospace
  font-size: 18px
  line-height: 1.67
  color: white

h1, h2, h3
  text-align: center

.container
  width: 100%
  background-image: url("/images/background.jpg"), 
        linear-gradient(72deg, #911c80, #0b66b2 85%, #0669b4),
        linear-gradient(72deg, var(--darkish-purple-alpha), #0b66b2 85%, var(--ocean-blue-alpha))
  background-size: 100vw 100vh
  background-repeat: no-repeat,
      no-repeat,
      no-repeat
  background-position: top,
      top,
      top

@media screen and (max-width: 2000px)
  .container
    background-image: url("/images/background-2000.jpg"), 
        linear-gradient(72deg, #911c80, #0b66b2 85%, #0669b4),
        linear-gradient(72deg, var(--darkish-purple-alpha), #0b66b2 85%, var(--ocean-blue-alpha))
 
