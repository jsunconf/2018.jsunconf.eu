.main-header
  padding-left: 20px
  padding-right: 20px
  display: flex
  flex-direction: column
  align-items: center
  opacity: 0.75
  background-image: linear-gradient(29deg, var(--darkish-purple), #0b66b2 85%, var(--ocean-blue))
  height: 100vh
  justify-content: flex-end

.main-header__logo
  text-align: center
.main-header__logo__image
  width: 50%

.sub-header
  width: 100%
  text-align: center
  background-image: linear-gradient(to bottom, rgba(196, 60, 183, 0), var(--darkish-purple))
  margin-bottom: 0
  padding: 30px
  height: 20vh

.emoji-font
  font-family: monospace
