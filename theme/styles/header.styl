.main-header
  // padding-left: 20px
  // padding-right: 20px
  display: flex
  flex-direction: column
  align-items: center
  height: 85.5vh
  width: 100%
  background: linear-gradient(29deg, var(--darkish-purple-alpha), rgba(11, 102, 178, 0.75) 85%, var(--ocean-blue-alpha)), url("/images/background.jpg")
  // background: linear-gradient(72deg, #911c80, #0b66b2 85%, #0669b4), linear-gradient(72deg, var(--darkish-purple-alpha), #0b66b2 85%, var(--ocean-blue-alpha)), url("/images/background.jpg")
  background-size: cover
  background-position: center
  justify-content: flex-end


.main-header__logo
  text-align: center
  padding: 2rem 0.5rem
  margin: 0

.main-header__logo__image
  width: 66%

.main-header__tagline
  padding: 1rem
  margin-top: 0

.main-header__supertitle
  font-weight: bold
  font-size: 3rem
  line-height: 3.5rem
  display: block
  margin: 0 0 0.5rem 0
  padding: 0

.main-header__title
  font-weight: bold
  display: block

.main-header__subtitle
  font-weight: bold
  display: block

.emoji-font
  font-family: monospace
