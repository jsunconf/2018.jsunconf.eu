.main-header
  padding-left: 20px
  padding-right: 20px
  display: flex
  flex-direction: column
  align-items: center
  background-image: linear-gradient(29deg, var(--darkish-purple-alpha), rgba(11, 102, 178, 0.75) 85%, var(--ocean-blue-alpha))
  height: 86.5vh
  justify-content: flex-end

.main-header__logo
  text-align: center

  
.main-header__logo__image
  width: 66%

.main-header__tagline
  padding: 40px 40px

.main-header__supertitle
  font-weight: bold
  font-size: 3rem
  line-height: 3.5rem
  display: block
  margin: 0 0 0.5rem 0
  padding: 0

.main-header__title
  font-weight: bold
  display: block

.main-header__subtitle
  font-weight: bold
  display: block


.emoji-font
  font-family: monospace
