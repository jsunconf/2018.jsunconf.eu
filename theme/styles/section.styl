.section
  background-color $backgroundColor
  color white
  padding 2.75rem 15vw 2.75rem 15vw

  &:nth-child(2n+1)
    background-color white
    color $backgroundColor
    a,
    .section__call-to-action .button
      color $backgroundColor

.section__content
  padding-bottom 3rem

.section__header,
.section__content
  text-align center

.section.section--sponsors
  background-color var(--dark-plum)
  color white

.section__call-to-action
  text-align center

a,
.section__call-to-action .button
  color white

.sponsors-button
  color white !important
  font-size 1.5rem

.button
  font-size: 1.5rem

@media screen and (max-width: 2000px)
  .section
    padding 4.75rem 20vw

@media screen and (max-width: 1000px)
  .section
    padding 3.75rem 15vw

@media screen and (max-width: 600px)
  .section
    padding 2.75rem 15vw
